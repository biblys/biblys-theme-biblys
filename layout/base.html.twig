<!DOCTYPE html>

<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>
      {% set titleBlock = block("title") %}
      {% if titleBlock is not empty %}
        {% block title %}{% endblock %} |
      {% endif %}
      {{ app.site.title }}
    </title>

    {# biblys assets #}
    {% include "layout:_assets_css.html.twig" %}

    <link rel="apple-touch-icon" href="/theme/apple-touch-icon.png" />

    <!-- Matomo -->
    <script type="text/javascript">
      var _paq = window._paq = window._paq || [];
      /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
      _paq.push(['trackPageView']);
      _paq.push(['enableLinkTracking']);
      (function() {
        var u="https://analytics.biblys.cloud/";
        _paq.push(['setTrackerUrl', u+'matomo.php']);
        _paq.push(['setSiteId', '1']);
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
        g.type='text/javascript'; g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
      })();
    </script>
    <!-- End Matomo Code -->
    <link rel="stylesheet" href="/theme/styles.css?{{ app.site.getOpt('assets_version') }}" />
  </head>
  <body>
    <div id="wrapper">
      <header id="header">
        <a href="/"><img src="/theme/biblys.png" id="logo" alt="Biblys"/></a>
        <h1>Biblys</h1>
      </header>
      <nav id="menu">
        <ul>
          <li>
            <a href="/blog/"><span>Blog</span></a>
          </li>
          <li>
            <a href="/pages/doc_index"><span>Documentation</span></a>
          </li>
          <li>
            <a href="/pages/tarifs"><span>Tarifs</span></a>
          </li>
          <li>
            <a href="/pages/open-source"><span>Open source</span></a>
          </li>
          <li>
            <a href="/contact/"><span>Contact</span></a>
          </li>
          <li>
            <a href="https://www.facebook.com/biblys.fr"><i class="fa fa-facebook"></i></a> &nbsp;
            <a href="https://twitter.com/Biblys"><i class="fa fa-twitter"></i></a> &nbsp;
            <a href="/pages/newsletter-biblys"><i class="fa fa-envelope-o"></i></a>
          </li>
        </ul>
      </nav>
      <section>
        {% block main %}{% endblock %}
      </section>
      <footer class="site-footer">
        <a href="/pages/mentions-legales">mentions légales</a>
        -
        <a href="https://status.biblys.cloud/">statut des services</a>
        -
        <a href="/biblys/changelog">mises à jour</a>
      </footer>
    </div>

    {{ app.axysMenu|raw }}
    {% include "layout:_assets_js.html.twig" %}
  </body>
</html>
